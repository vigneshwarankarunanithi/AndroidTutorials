<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="180dip"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!--  ListRow Left sied Thumbnail image -->

    <!-- Title Of Song-->

    <!-- Artist Name -->
    <TextView
        android:id="@+id/lblAvailable"
        android:layout_width="100dip"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:textSize="15dip"
        android:textAlignment="center"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        android:background="@drawable/borderblackcorner"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/lblAmount"
        android:text="Availabe 10" />


    <!-- Rightend Arrow -->

    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/chit"/>

    </LinearLayout>



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rihanna Love the way lie"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="17dip"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="120dip"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:background="@drawable/borderblackcorner"
        android:textSize="15dip"
        android:textAlignment="center"
        android:text="Total 30"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/lblAmount"
        android:layout_toRightOf="@+id/lblAvailable"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/greentick"
        android:id="@+id/imgTick"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/title"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/lblAmount"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="RS.50,000/-"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="20dip"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center_vertical|center_horizontal"
       android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>